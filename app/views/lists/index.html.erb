<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>List name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.list_name %></td>
        <td><%= link_to 'Show', products_path ,:class=> "btn btn-outline-danger"%></td>
        <%#<td><%= link_to 'Edit', edit_list_path(list)</td>%>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } ,:class=> "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path,:class=>"btn btn-warning btn-lg" %>
