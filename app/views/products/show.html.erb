<div class="card">
 <div class="card-header">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
 </div>
 <div class="card-body">
    <p class="card-text">
      <strong>Price:</strong>
      <%= @product.price %>
